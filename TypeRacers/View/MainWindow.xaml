<Window x:Class="TypeRacers.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="MainMenu"
               >

        </Frame>
        <TextBlock Name="txt_welcomingmessage" Text="Welcome to your typing contest!"
                   Foreground="BlueViolet"
                   TextAlignment="Center"
                   FontSize="30" Margin="10,25,-10,-25">
            
        </TextBlock>

        <Button x:Name="btnContest" Content="Enter Race"
                Foreground="YellowGreen"
                FontSize="30"
                Background="White"
                Margin="326,132,308,223"
                BorderThickness="0"
                Click="Contest_Click">
        </Button>

        <Button Name ="btnPractice" Content="Practice"
                Foreground="YellowGreen"
                FontSize="30" Background="White"
                Margin="308,213,284,140"
                BorderThickness="0"  RenderTransformOrigin="0.556,2.03"
                Click="Practice_Click">
        </Button>
    </Grid>
</Window>